{
    "name": "talentify/backend-challange",
    "description": "Talentify Backend challange.",
    "keywords": [
        "talentify",
        "api",
        "restfull"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "doctrine/dbal": "^3.0",
        "firebase/php-jwt": "^6.0",
        "laravel/lumen-framework": "^8.0",
        "ramsey/uuid": "^4.1",
        "zircote/swagger-php": "^3.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Talentify\\": "src/Talentify",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "create-swagger": "vendor/bin/openapi --output public/api-docs/swagger.json ./docs/swagger",
        "tests-windows": "vendor\\bin\\phpunit",
        "tests": "./vendor/bin/phpunit"
    }
}
